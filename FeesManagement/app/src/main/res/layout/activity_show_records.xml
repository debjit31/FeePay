<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".accept_fees"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Enter Month and Year\nfor Displaying Records"
            android:layout_gravity="center_horizontal"
            android:textSize="38sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:layout_marginTop="85dp"/>


        <LinearLayout
            android:id="@+id/month_layout"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/phone_layout"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="30dp"
                android:id="@+id/headingMonth"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Records For\nthe Year\n      of:- "
                android:textSize="23sp"
                android:textStyle="bold"
                android:textColor="#000000"
                tools:ignore="RtlCompat" />


            <Spinner
                android:id="@+id/yearSpinner"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/heading4"
                android:gravity="center"
                tools:ignore="DuplicateIds" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/year_layout"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/phone_layout"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="30dp"
                android:id="@+id/heading4"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Records For\nthe Month\n      of:- "
                android:textSize="23sp"
                android:textStyle="bold"
                android:textColor="#000000"
                tools:ignore="RtlCompat" />


            <Spinner
                android:id="@+id/monthSpinner"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/heading4"
                android:gravity="center" />
        </LinearLayout>



        <Button
            android:id="@+id/displayRecordsButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:text="Display"
            android:textAllCaps="false"
            android:background="@drawable/btn_back"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>


</ScrollView>