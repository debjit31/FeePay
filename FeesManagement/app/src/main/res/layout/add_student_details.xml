<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="14dp"
    tools:context=".add_student_details">


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Student Add page"
        android:textAlignment="center"
        android:textSize="38sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:padding="6dp"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <!--Name-->
        <LinearLayout
            android:id="@+id/name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/heading1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Student's \n Name :- "
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="23sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/nameEd"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/heading1"
                android:background="@drawable/input_back"
                android:gravity="center"
                android:hint="Student's Name" />
        </LinearLayout>

        <!--Guardian's Name-->
        <LinearLayout
            android:id="@+id/guardians_name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/guardian_heading1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Guardian's \n Name :- "
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="23sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/guardians_nameEd"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/heading1"
                android:background="@drawable/input_back"
                android:gravity="center"
                android:hint="Guardian's Name" />
        </LinearLayout>

        <!--Phone Number-->
        <LinearLayout
            android:id="@+id/phone_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_layout"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/heading3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Phone \n Number:- "
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="23sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/phoneEd"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/heading3"
                android:background="@drawable/input_back"
                android:gravity="center"
                android:hint="Phone Number"
                android:inputType="number" />
        </LinearLayout>

        <!--Address-->
        <LinearLayout
            android:id="@+id/address_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_layout"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/heading2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Address:- "
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="23sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/addressEd"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/heading2"
                android:background="@drawable/input_back"
                android:gravity="center"
                android:hint="Address"
                android:inputType="textPostalAddress" />
        </LinearLayout>

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:text="Add"
            android:textAllCaps="false"
            android:background="@drawable/btn_back"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>