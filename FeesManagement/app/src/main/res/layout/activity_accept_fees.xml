<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".accept_fees"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Accept Fees Page"
        android:layout_gravity="center_horizontal"
        android:textSize="38sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:layout_marginTop="85dp"/>


    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Name :- "
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="23sp"
            android:textStyle="bold" />


        <EditText
            android:inputType="textPersonName"
            android:id="@+id/nameEd"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/heading1"
            android:background="@drawable/input_back"
            android:gravity="center"
            android:hint="Student Name " />
    </LinearLayout>

    <LinearLayout
    android:id="@+id/month_layout"
    android:layout_gravity="center_horizontal"
    android:layout_below="@+id/phone_layout"
    android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <TextView
        android:layout_marginLeft="30dp"
        android:id="@+id/heading4"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fees For\nthe month\n      of:- "
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="#000000" />


    <Spinner
        android:id="@+id/monthEd"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/heading4"
        android:gravity="center" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/guardians_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Date of\nPayment :- "
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="23sp"
            android:textStyle="bold" />


        <EditText
            android:inputType="date"
            android:id="@+id/dateEd"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/heading1"
            android:background="@drawable/input_back"
            android:gravity="center"
            android:hint="dd / mm / yy " />
    </LinearLayout>



    <Button
        android:id="@+id/submitBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:text="Accept"
        android:textAllCaps="false"
        android:background="@drawable/btn_back"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />


</LinearLayout>